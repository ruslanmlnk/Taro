---
// TarotExpert.astro
---

<div class="tarot-expert-container" id="expert">
  <div class="content-wrapper">
    <!-- Left side - Expert photo -->
    <div class="expert-photo-section">
      <div class="photo-container">
        <img 
          src="/expert.jpg" 
          alt="Tarot Expert" 
          class="expert-photo"
        />
        <div class="decorative-elements">
          <div class="svg-decorations">
            <img src="/star_expert.svg" alt="star_expert">
          </div>
        </div>
      </div>
    </div>

    <!-- Right side - Content -->
    <div class="content-section">
      <div class="main-content">
        <!-- Header with star -->
        <div class="header-section">
          <h1 class="main-title">Експертка, якій довіряють</h1>
        </div>

        <!-- Stats cards -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number">10+</div>
            <div class="stat-label">років досвіду</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">17+</div>
            <div class="stat-label">країн запитів</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">900+</div>
            <div class="stat-label">сесій із запитом</div>
          </div>
        </div>

        <!-- Features list -->
        <div class="features-list">
          <div class="feature-item">
            <img src="/star.svg" alt="">
            <div class="feature-text">Учасниця телевізійних езотеричних проектів</div>
          </div>
          <div class="feature-item">
            <img src="/star.svg" alt="">
            <div class="feature-text">Досвід, перевірений міжнародною практикою</div>
          </div>
          <div class="feature-item">
            <img src="/star.svg" alt="">
            <div class="feature-text">Працює з архетипами, символами, психологією</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  .content-wrapper {
    display: flex;
    align-items: center;
    margin: 0 auto;
    padding: 100px 20px 100px 94px;
    gap: 122.77px;
    max-width: 1712px;
  }

  /* Left side - Photo section */
  .expert-photo-section {
    flex: 0 0 auto;
    position: relative;
  }

  .photo-container {
    position: relative;
    width: 614.61px;
    height: 614.61px;
  }

  .expert-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    object-position: 77% 0;
  }

  .decorative-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .svg-decorations {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 775.5px;
    height: 385px;
    z-index: -1;
  }

  .header-section {
    margin-bottom: 33px;
  }

  /* Stats grid */
  .stats-grid {
    display: flex;
    margin-bottom: 40px;
  }

  .stat-card {
    background: rgba(75, 68, 63, 1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(206, 190, 177, 1);
    width: 294px;
    height: 150px;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .stat-card:first-child{
    border-radius: 20px 0 0 20px;
  }

  .stat-card:last-child{
    border-radius: 0 20px 20px 0;
  }

  .stat-number {
    font-size: 60px;
    font-weight: 700;
    color: rgba(254, 209, 167, 1);
    line-height: 70px;
    margin-bottom: 8px;
    font-family: 'Coolvetica', sans-serif;
  }

  .stat-label {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 400;
    line-height: 1.45;
    font-family: 'Montserrat', sans-serif;
  }

  /* Features list */
  .features-list {
    display: flex;
    flex-direction: column;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .feature-icon {
    color: #d4af37;
    font-size: 20px;
    margin-top: 2px;
    flex-shrink: 0;
  }

  .feature-text {
    font-size: 22px;
    color: rgba(255, 255, 255, 0.9);
    line-height: 45px;
    font-weight: 400;
    font-family: "Montserrat", sans-serif;
  }

  @media (max-width: 1600px) {
    .content-wrapper {
      gap: 100px;
    }
    
    .photo-container {
      width: 550px;
      height: 550px;
    }
    
    .stat-card {
      width: 260px;
      height: 130px;
    }
    
    .stat-number {
      font-size: 54px;
      line-height: 64px;
    }
    
    .stat-label {
      font-size: 18px;
    }
    
    .feature-text {
      font-size: 20px;
      line-height: 40px;
    }
  }

  @media (max-width: 1400px) {
    .content-wrapper {
      gap: 80px;
      /* padding: 80px 0; */
    }
    
    .photo-container {
      width: 500px;
      height: 500px;
    }
    
    .stat-card {
      width: 136px;
      height: 109px;
    }
    
    .stat-number {
      font-size: 48px;
      line-height: 58px;
    }
    
    .stat-label {
      font-size: 17px;
    }
    
    .feature-text {
      font-size: 19px;
      line-height: 38px;
    }
  }

  @media (max-width: 1200px) {
    .content-wrapper {
      gap: 60px;
    }
    
    .photo-container {
      width: 450px;
      height: 450px;
    }
    

    .stat-number {
      font-size: 42px;
      line-height: 52px;
    }
    
    .stat-label {
      font-size: 16px;
    }
    
    .feature-text {
      font-size: 18px;
      line-height: 36px;
    }
  }

  @media (max-width: 1024px) {
    .content-wrapper {
      gap: 50px;
    }
    
    .photo-container {
      width: 400px;
      height: 400px;
    }
    
    .stat-card {
      height: 100px;
    }
    
    .stat-number {
      font-size: 35px;
      line-height: 48px;
    }
    
    .stat-label {
      font-size: 14px;
    }
    
    .feature-text {
      font-size: 17px;
      line-height: 34px;
    }
  }



  @media (max-width: 768px) {
    .decorative-elements{
      display: none;
    }
    .content-wrapper {
      flex-direction: column;
      gap: 32px;
      padding: 42px 20px;
    }

    .photo-container {
      width: 100%;
      height: 248.4px;
    }

    .photo-container img{
      border-radius: 10.16px;
    }

    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      margin-bottom: 35px;
    }

    .header-section {
      justify-content: center;
    }
    
    .stat-card {
      width: 106.67px;
      height: 89px;
    }
    
    .stat-number {
      font-size: 30px;
      line-height: 25.4px;
    }
    
    .stat-label {
      font-size: 12px;
      line-height: 12.5px;
      max-width: 65px;
    }
    
    .features-list{
      gap: 16px;
    }

    .feature-item{
      gap: 12px;
    }
    
    .feature-text {
      font-size: 16px;
      line-height: 23px;
    }
  }

  
</style>