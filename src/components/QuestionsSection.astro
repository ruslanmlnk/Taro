    background: url('/q3.jpg') center/cover no-repeat;
  }

  .question-card:nth-child(4) .question-image{
    background: url('/q4.jpg') center/cover no-repeat;
  }

  .question-content {
    padding: 32px 24px;
    background: rgba(255, 243, 235, 1);
    text-align: center;
    height: 138px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .question-card h3 {
    font-size: 24px;
    margin: 0;
    color: #000;
    font-weight: 600;
    line-height: 1.4;
  }

  .questions-decoration {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 60px;
  }

  .decoration-svg {
    width: 152px;
    height: 26px;
  }

