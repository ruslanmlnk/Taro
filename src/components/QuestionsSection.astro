<style lang="scss">
  .mobile{
    display: none;
  }
  .questions-section {
    padding: 0 30px;
    overflow-x: hidden;
  }
  
  .container {
    max-width: 1860px;
    margin: 0 auto;
    width: 100%;
    padding: 100px 69px;
    background: rgba(75, 68, 63, 1);
    border-radius: 30px;
    overflow: hidden;
  }

  .questions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    margin: 0 auto;
    position: relative;
    max-width: 100%;
  }

  .question-card {
    background: #FFFFFF;
    border-radius: 40px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    cursor: pointer;
    height: max-content;
    width: 100%;
    max-width: 400px;
    justify-self: center;
  }

  .question-card:nth-child(2),
  .question-card:nth-child(4) {
    margin-top: 60px;
  }

  .question-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .question-image {
    width: 100%;
    height: 332px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    overflow: hidden;
  }

  .question-card:nth-child(1) .question-image {
    background: url('/q1.jpg') center/cover no-repeat;
  }

  .question-card:nth-child(2) .question-image{
    background: url('/q2.jpg') center/cover no-repeat;
  }

